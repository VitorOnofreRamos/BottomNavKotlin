<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ID1_homeButton"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="Button Home"
        android:src="@drawable/baseline_home_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ID2_historyButton"
        app:layout_constraintStart_toEndOf="@+id/ID3_taskButton" />

    <ImageButton
        android:id="@+id/ID2_historyButton"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="Button History"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_access_time_24" />

    <ImageButton
        android:id="@+id/ID3_taskButton"
        android:layout_width="105dp"
        android:layout_height="70dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="Button Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_assignment_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PÃ¡gina Principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>